<% provide(:title, 'sign up') %>
<div class="container">
    <div class="col-md-12">
        <div class="col-md-offset-3 col-md-6">
            <h1>
              sign up
            </h1>
            <%= form_for(@user) do |f| %>
                <%= render 'shared/error_messages' %>

                <%= f.label 'first name' %>
                <%= f.text_field :fname, autofocus: true %>

                <%= f.label 'last name' %>
                <%= f.text_field :lname %>

                <%= f.label :company %>
                <%= f.text_field :company %>

                <%= f.label :email %>
                <%= f.text_field :email %>

                <%= f.label :password %>
                <%= f.password_field :password %>

                <%= f.label :password_confirmation, "Confirmation" %>
                <%= f.password_field :password_confirmation %>

                <div class="col-md-12">
                &nbsp;
                </div>
                <p>
                    <%= f.submit "create account", class: "btn btn-sm btn-primary col-md-4" %>
                </p>
            <% end %>
        </div>
    </div>
</div>