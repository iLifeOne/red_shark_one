<% provide(:title, 'all users' ) %>
<div class="container">
    <div class="col-md-12">
        <h1>
        registered users
        </h1>
        <div class="col-md-12">
        <%= will_paginate %>
        <table class="table table-striped table-bordered table-condensed">
            <thead>
                <tr>
                    <th>Full Name</th>
                    <th>Company</th>
                    <th>Email</th>
                    <th class="col-md-2"></th>
                </tr>
            </thead>
            <tbody>
                <%= render @users %>
            </tbody>
        </table>
        <%= will_paginate %>
        </div>
    </div>
</div>